@model IEnumerable<ApplicationType>

@{
    ViewBag.Title = "Index";
}

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Application Type
            </a>
        </div>
    </div>
    <br/><br/>
    
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-3">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-3">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type exists</p>
    }
    
</div>
